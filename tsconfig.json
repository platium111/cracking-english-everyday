  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "types": ["node",  "chrome"]
  },
  "include": ["src/**/*"]
}
